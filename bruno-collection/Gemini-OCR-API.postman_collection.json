{
  "info": {
    "_postman_id": "gemini-ocr-api-collection",
    "name": "Gemini OCR+Annotation API",
    "description": "Postman collection for testing the Gemini OCR+Annotation API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/healthz",
              "host": ["{{baseUrl}}"],
              "path": ["healthz"]
            },
            "description": "Health check endpoint"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Get Google OAuth URL",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/auth/google/state",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "auth", "google", "state"]
            },
            "description": "Get Google OAuth URL for login redirect"
          },
          "response": []
        },
        {
          "name": "Google OAuth Callback (Redirect)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/auth/google/callback?state={{state}}&code={{code}}",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "auth", "google", "callback"],
              "query": [
                {
                  "key": "state",
                  "value": "{{state}}",
                  "description": "State from Google"
                },
                {
                  "key": "code",
                  "value": "{{code}}",
                  "description": "Authorization code from Google"
                }
              ]
            },
            "description": "Google OAuth callback redirect"
          },
          "response": []
        },
        {
          "name": "Exchange Code for JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"4/ABCD...\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/auth/google/callback",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "auth", "google", "callback"]
            },
            "description": "Exchange Google OAuth code for JWT token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-token",
                "value": "{{token}}",
                "description": "JWT token"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "users", "me"]
            },
            "description": "Get current user profile"
          },
          "response": []
        },
        {
          "name": "Get Available Languages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-token",
                "value": "{{token}}",
                "description": "JWT token"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/users/me/languages",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "users", "me", "languages"]
            },
            "description": "Get available languages"
          },
          "response": []
        },
        {
          "name": "Update User Preferences",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "x-token",
                "value": "{{token}}",
                "description": "JWT token"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"preferredLanguage\": \"JP\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "users", "me"]
            },
            "description": "Update user preferences"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Scans",
      "item": [
        {
          "name": "Upload Image & Create Scan",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-token",
                "value": "{{token}}",
                "description": "JWT token"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "image",
                  "type": "file",
                  "description": "Image file to upload"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/v1/scans",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "scans"]
            },
            "description": "Upload image and create new scan"
          },
          "response": []
        },
        {
          "name": "Get Scan History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-token",
                "value": "{{token}}",
                "description": "JWT token"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/scans?page=1&size=20",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "scans"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "size",
                  "value": "20",
                  "description": "Page size (default: 20)"
                }
              ]
            },
            "description": "Get scan history with pagination"
          },
          "response": []
        },
        {
          "name": "Get Scan Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-token",
                "value": "{{token}}",
                "description": "JWT token"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/scans/{{scanId}}",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "scans", "{{scanId}}"]
            },
            "description": "Get scan details"
          },
          "response": []
        }
      ]
    },
    {
      "name": "AI",
      "item": [
        {
          "name": "Analyze Text with AI",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-token",
                "value": "{{token}}",
                "description": "JWT token"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"textToAnalyze\": \"Giling Basah\",\n  \"context\": \"Kopi ini menggunakan teknik Giling Basah.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/ai/analyze",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "ai", "analyze"]
            },
            "description": "Analyze text with AI"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Annotations",
      "item": [
        {
          "name": "Create Annotation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-token",
                "value": "{{token}}",
                "description": "JWT token"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scanId\": 1,\n  \"highlightedText\": \"Giling Basah\",\n  \"contextText\": \"Kopi ini menggunakan teknik Giling Basah.\",\n  \"nuanceData\": {\n    \"meaning\": \"...\",\n    \"usageExample\": \"...\",\n    \"usageTiming\": \"...\",\n    \"wordBreakdown\": \"...\",\n    \"alternativeMeaning\": \"...\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/v1/annotations",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "annotations"]
            },
            "description": "Create new annotation/bookmark"
          },
          "response": []
        },
        {
          "name": "Get All Annotations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-token",
                "value": "{{token}}",
                "description": "JWT token"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/v1/annotations?page=1&size=20",
              "host": ["{{baseUrl}}"],
              "path": ["v1", "annotations"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number (default: 1)"
                },
                {
                  "key": "size",
                  "value": "20",
                  "description": "Page size (default: 20)"
                }
              ]
            },
            "description": "Get all annotations with pagination"
          },
          "response": []
        }
      ]
    }
  ]
}
